<Page x:Class="Intern_Application.Homepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Intern_Application"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Homepage">

    <Grid Background="#FF24345A" Width="492" Height="467.2">
        
        <Label Content="&#xD;&#xA;HOMEPAGE" HorizontalAlignment="Left" Margin="187,-9,0,0" VerticalAlignment="Top" FontSize="18" Height="63" FontWeight="Bold" Foreground="#FFB9B5B5"/>
