        <Button x:Name="crudPageBtn" Content="CRUD PAGE" HorizontalAlignment="Center" VerticalAlignment="Center" Width="92" Height="41" FontWeight="Bold" FontSize="13" Click="crudPageBtn_Click" Margin="200,0,0,300"/>
        <Frame x:Name="Home" Margin="155,148,182,-27.8" NavigationUIVisibility="Hidden"/>
        <Label Content="HOME PAGE" HorizontalAlignment="Left" Margin="184,210,0,0" VerticalAlignment="Top" Height="49" Width="208" FontSize="18" FontWeight="Bold" Foreground="White" RenderTransformOrigin="1.06,-0.119">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.712"/>
                    <TranslateTransform X="0.367" Y="1.449"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Page>
